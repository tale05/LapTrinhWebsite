@model Nhom8_DoAnWebBanLaptop_SangT6.Models.ChiTietSanPham
@{
    ViewBag.Title = "EditDetail";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<form action="/admin/editdetail?id=@Model.ID" method="post">
    <div class="row">
        <div class="col-6">
            @Html.LabelFor(row => row.CPU, "CPU")
            <input class="form-control" type="text" name="CPU" value="@Model.CPU" />
        </div>
        <div class="col-6">
            @Html.LabelFor(row => row.RAM, "RAM")
            <input class="form-control" type="text" name="RAM" value="@Model.RAM" />
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            @Html.LabelFor(row => row.OCUNG, "Ổ Cứng")
            <input class="form-control" type="text" name="OCUNG" value="@Model.OCUNG" />
        </div>
        <div class="col-6">
            @Html.LabelFor(row => row.CARDMH, "Card Màn Hình")
            <input class="form-control" type="text" name="CARDMH" value="@Model.CARDMH" />
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            @Html.LabelFor(row => row.MANHINH, "Màn Hình")
            <input class="form-control" type="text" name="MANHINH" value="@Model.MANHINH" />
        </div>
        <div class="col-6">
            @Html.LabelFor(row => row.PIN, "PIN")
            <input class="form-control" type="text" name="PIN" value="@Model.PIN" />
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            @Html.LabelFor(row => row.TRONGLUONG, "Trọng Lượng")
            <input class="form-control" type="text" name="TRONGLUONG" value="@Model.TRONGLUONG" />
        </div>
        <div class="col-6">
            @Html.LabelFor(row => row.MAUSAC, "Màu Sắc")
            <input class="form-control" type="text" name="MAUSAC" value="@Model.MAUSAC" />
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary mx-2 mt-3">Save</button>
        <a class="btn btn-danger mx-2 mt-3" href="/admin/quanly">Back</a>
    </div>
</form>


