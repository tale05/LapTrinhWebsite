@model Nhom8_DoAnWebBanLaptop_SangT6.Models.SanPham
@{
    ViewBag.Title = "EditSP";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div>
    <h2 class="mt-3 mb-3" style="color: aqua; text-shadow: 1px 1px 5px red; margin: 0 auto; width: 300px">Chỉnh Sửa sản phẩm</h2>
</div>
<form action="/admin/editsp?id=@Model.ID" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-6">
            @Html.LabelFor(row => row.TenSanPham, "Tên Sản Phẩm")
            <input class="form-control" type="text" name="TenSanPham" value="@Model.TenSanPham.Trim()" />
        </div>
        <div class="col-6">
            @Html.LabelFor(row => row.GiaBan, "Giá Bán")
            <input class="form-control" type="text" name="GiaBan" value="@Model.GiaBan" />
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            @Html.LabelFor(row => row.GiaGiam, "Giá Giảm")
            <input class="form-control" type="text" name="GiaGiam" value="@Model.GiaGiam" />
        </div>
        <div class="col-6">
            @Html.LabelFor(row => row.SoLuong, "Số Lượng")
            <input class="form-control" type="number" name="SoLuong" value="@Model.SoLuong" />
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            @Html.LabelFor(row => row.ThuongHieus.ID, "Thương Hiệu")
            <select class="form-control" name="IDThuongHieu">
                <option value="@Model.ThuongHieus.ID">@Model.ThuongHieus.TenTH</option>
                @foreach (var item in ViewBag.th)
                {
                    if (item.ID != Model.ThuongHieus.ID)
                    {
                        <option value="@item.ID">@item.TenTH</option>
                    }
                }
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            @Html.LabelFor(row => row.PhanLoais.ID, "Phân Loại")
            <select class="form-control" name="IDPhanLoai">
                <option value="@Model.PhanLoais.ID">@Model.PhanLoais.TenLoai</option>
                @foreach (var item in ViewBag.pl)
                {
                    if (item.ID != Model.PhanLoais.ID)
                    {
                        <option value="@item.ID">@item.TenLoai</option>
                    }
                }
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            @Html.LabelFor(row => row.AnhBia, "Hình Ảnh")
            <input class="form-control" type="text" name="AnhBia" value="@Model.AnhBia" />
            <div class="d-flex justify-content-center mt-3" >
                <img style="width: 150px; height: 150px; border-radius: 5px" src="~/Img/@Model.AnhBia" alt="Alternate Text" />
            </div>
        </div>
        <div class="col-6">
            @Html.LabelFor(row => row.AnhBia, "Chọn Ảnh Khác")
            <input class="form-control" type="file" name="AnhBia" value="@Model.AnhBia" />
        </div>

    </div>
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary mx-2 mt-3">Save</button>
        <a class="btn btn-danger mx-2 mt-3" href="/admin/quanly">Back</a>
    </div>

</form>

