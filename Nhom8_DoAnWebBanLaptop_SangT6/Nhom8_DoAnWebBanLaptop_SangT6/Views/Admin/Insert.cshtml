@model Nhom8_DoAnWebBanLaptop_SangT6.Models.SanPham
@{
    ViewBag.Title = "Insert";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<div>
    <h2 class="mt-3 mb-3" style="color: aqua; text-shadow: 1px 1px 5px red; margin: 0 auto; width: 300px">Thêm sản phẩm</h2>
</div>
<form action="/admin/insert" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-6">
            @Html.LabelFor(row => row.TenSanPham, "Tên Sản Phẩm")
            @Html.TextBoxFor(row => row.TenSanPham, new { @class = "form-control" })
        </div>
        <div class="col-6">
            @Html.LabelFor(row => row.GiaBan, "Giá Bán")
            @Html.TextBoxFor(row => row.GiaBan, new { @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            @Html.LabelFor(row => row.GiaGiam, "Giá Giảm")
            @Html.TextBoxFor(row => row.GiaGiam, new { @class = "form-control" })
        </div>
        <div class="col-6">
            @Html.LabelFor(row => row.SoLuong, "Số Lượng")
            @Html.TextBoxFor(row => row.SoLuong, new { @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            @Html.LabelFor(row => row.ThuongHieus.ID, "Thương Hiệu")
            <select class="form-control" name="IDThuongHieu">
                <option value="">Please select...</option>
                @foreach (var item in ViewBag.th)
                {
                    <option value="@item.ID">@item.TenTH</option>
                }
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            @Html.LabelFor(row => row.PhanLoais.ID, "Phân Loại")
            <select class="form-control" name="IDPhanLoai">
                <option value="">Please select...</option>
                @foreach (var item in ViewBag.pl)
                {
                    <option value="@item.ID">@item.TenLoai</option>
                }
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            @Html.LabelFor(row => row.AnhBia, "Hình Ảnh")
            <input class="form-control" type="file" name="AnhBia" value=" " />
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary mx-2 mt-3">Save</button>
        <a class="btn btn-danger mx-2 mt-3" href="/admin/quanly">Back</a>
    </div>
    
</form>

