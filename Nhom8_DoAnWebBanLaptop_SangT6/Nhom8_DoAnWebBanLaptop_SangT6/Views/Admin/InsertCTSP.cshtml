@model Nhom8_DoAnWebBanLaptop_SangT6.Models.ChiTietSanPham
@{
    ViewBag.Title = "InsertCTSP";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<form action="/admin/insertCTSP" method="post">
    <input type="hidden" name="IDMaSP" value="@ViewBag.sp.ID" />
    <div class="row">
        <div class="col-6">
            @Html.LabelFor(row => row.CPU, "CPU")
            @Html.TextBoxFor(row => row.CPU, new { @class = "form-control" })
        </div>
        <div class="col-6">
            @Html.LabelFor(row => row.RAM, "RAM")
            @Html.TextBoxFor(row => row.RAM, new { @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            @Html.LabelFor(row => row.OCUNG, "Ổ Cứng")
            @Html.TextBoxFor(row => row.OCUNG, new { @class = "form-control" })
        </div>
        <div class="col-6">
            @Html.LabelFor(row => row.CARDMH, "Card Màn Hình")
            @Html.TextBoxFor(row => row.CARDMH, new { @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            @Html.LabelFor(row => row.MANHINH, "Màn Hình")
            @Html.TextBoxFor(row => row.MANHINH, new { @class = "form-control" })
        </div>
        <div class="col-6">
            @Html.LabelFor(row => row.PIN, "PIN")
            @Html.TextBoxFor(row => row.PIN, new { @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            @Html.LabelFor(row => row.TRONGLUONG, "Trọng Lượng")
            @Html.TextBoxFor(row => row.TRONGLUONG, new { @class = "form-control" })
        </div>
        <div class="col-6">
            @Html.LabelFor(row => row.MAUSAC, "Màu Sắc")
            @Html.TextBoxFor(row => row.MAUSAC, new { @class = "form-control" })
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary mx-2 mt-3">Save</button>
        <a class="btn btn-danger mx-2 mt-3" href="/admin/quanly">Back</a>
    </div>
</form>

