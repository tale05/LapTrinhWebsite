@if (Model.Count > 0)
{
    <div class="row row-cols-5 g-4 mt-3 mb-2">
        @foreach (var item in Model)
        {
            double sale = Math.Round((100 - ((Convert.ToDouble(item.GiaGiam) / Convert.ToDouble(item.GiaBan)) * 100)), 0);
            ViewBag.sale = sale;
            <div class="col">
                <a class="text-decoration-none" href="/sanpham/chitietsanpham?id=@item.ID">
                    <div class="card">
                        <img class="card-img" src="~/Img/@item.AnhBia.Trim()" alt="Alternate Text" />
                        <div class="card-body">
                            <p class="card-title text-black" style="font-weight: bold ;display: -webkit-box; max-height: 3.2rem; -webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis; white-space: normal; -webkit-line-clamp: 3; line-height: 1.6rem;">
                                @item.TenSanPham
                            </p>
                            <p style="font-size: 20px; font-weight:bold">@item.GiaGiam.ToString("C")</p>
                            <del class="card-text" style="color:gray">
                                @item.GiaBan.ToString("C")
                            </del>
                            <span class=" text-danger float-end">-@ViewBag.sale%</span>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}
else
{
    <p class="text-danger mt-3 mb-3" style="font-weight: 700">Chưa có sản phẩm thuộc thương hiệu này</p>
}
